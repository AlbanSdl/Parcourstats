{
  "name": "parcourstats",
  "version": "0.3.3",
  "description": "A Parcoursup watcher",
  "main": "main/index.js",
  "private": true,
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('build/src', {force:true,recursive:true})\"",
    "gather-resources": "copyfiles -u 1 -e src/**/*.ts -e **/tsconfig.json src/**/* build/src/",
    "compile-main": "tsc --p src/main/tsconfig.json && npm run gather-resources && webpack",
    "compile-tests": "tsc --p tests/tsconfig.json",
    "compile-setup": "tsc --p scripts/tsconfig.json",
    "start-no-compile": "electron build/src/main/index.js",
    "test-no-compile": "node build/tests/main.js",
    "start": "npm run clean && npm run compile-main && npm run start-no-compile",
    "build": "npm run clean && npm run compile-main && npm run compile-setup && node build/scripts/build.js",
    "test": "npm run clean && npm run compile-tests && npm run test-no-compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlbanSdl/Parcourstats.git"
  },
  "author": "AlbanSdl",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/AlbanSdl/Parcourstats/issues"
  },
  "homepage": "https://github.com/AlbanSdl/Parcourstats#readme",
  "devDependencies": {
    "@types/sqlite3": "^3.1.7",
    "copyfiles": "^2.4.1",
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "ts-loader": "^9.2.3",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.3.5",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "sqlite3": "^5.0.2"
  }
}
