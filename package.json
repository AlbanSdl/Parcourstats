{
  "name": "parcourstats",
  "version": "0.0.1",
  "description": "A Parcoursup watcher",
  "main": "main/index.js",
  "private": true,
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('./build', {force:true,recursive:true})\"",
    "gather-resources": "copyfiles -u 1 -e src/**/*.ts -e **/tsconfig.json src/**/* build/raw/",
    "compile-main": "tsc --p src/main/tsconfig.json && npm run gather-resources && webpack",
    "compile-tests": "tsc --p tests/tsconfig.json",
    "start-no-compile": "electron ./build/raw/main/index.js",
    "test-no-compile": "node ./build/tests/main.js",
    "start": "npm run clean && npm run compile-main && npm run start-no-compile",
    "build": "npm run clean && npm run compile-main && electron-builder",
    "test": "npm run clean && npm run compile-tests && npm run test-no-compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlbanSdl/Parcourstats.git"
  },
  "author": "AlbanSdl",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/AlbanSdl/Parcourstats/issues"
  },
  "homepage": "https://github.com/AlbanSdl/Parcourstats#readme",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "electron": "^13.0.1",
    "electron-builder": "^22.10.5",
    "ts-loader": "^9.2.2",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "build": {
    "extends": null,
    "productName": "Parcourstats",
    "appId": "fr.asdl.parcourstats",
    "mac": {
      "category": "public.app-category.education"
    },
    "copyright": "Copyright Â© 2021 ${author}",
    "directories": {
      "output": "build/"
    },
    "icon": "raw/resources/icons/app-icon.png",
    "nsis": {
      "installerIcon": ".icon-ico/icon.ico",
      "uninstallerIcon": ".icon-ico/icon.ico",
      "deleteAppDataOnUninstall": true
    },
    "files": [
      {
        "from": "build/raw",
        "to": "",
        "filter": [
          "**/*"
        ]
      },
      "package.json"
    ]
  },
  "dependencies": {
    "sqlite3": "^5.0.2"
  }
}
