{
  "name": "parcourstats",
  "version": "0.0.1",
  "description": "A Parcoursup watcher",
  "main": "index.js",
  "private": true,
  "scripts": {
    "clean": "node clean.js ./build/raw ./build/tests",
    "gather-resources": "copyfiles -u 1 -e src/**/*.ts -e **/tsconfig.json src/**/* build/raw/",
    "compile-main": "npm run clean && tsc --p src/tsconfig.json && npm run gather-resources",
    "compile-tests": "npm run clean && tsc --p tests/tsconfig.json",
    "start": "npm run compile-main && electron ./build/raw/index.js",
    "build": "npm run compile-main && electron-builder",
    "test": "npm run compile-tests && node ./build/tests/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlbanSdl/parcourstats.git"
  },
  "author": "AlbanSdl",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/AlbanSdl/parcourstats/issues"
  },
  "homepage": "https://github.com/AlbanSdl/parcourstats#readme",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "electron": "^13.0.1",
    "electron-builder": "^22.10.5",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "build": {
    "extends": null,
    "productName": "Parcoustats",
    "appId": "fr.asdl.parcourstats",
    "mac": {
      "category": "public.app-category.education"
    },
    "copyright": "Copyright Â© 2021 ${author}",
    "directories": {
      "output": "build/"
    },
    "files": [
      {
        "from": "build/raw",
        "to": "",
        "filter": [
          "**/*"
        ]
      },
      "package.json"
    ]
  },
  "dependencies": {
    "sqlite3": "^5.0.2"
  }
}
